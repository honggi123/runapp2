<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/viewenddate_datesel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:hint="종료일 설정"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/view_startdate_datesel"
        app:layout_constraintStart_toStartOf="@+id/view_startdate_datesel"
        app:layout_constraintTop_toBottomOf="@+id/view_startdate_datesel" />

    <TextView
        android:id="@+id/view_startdate_datesel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="28dp"
        android:hint="시작일 설정"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/btn_startdate_datesel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_startdate_datesel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="선택"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_startdate_datesel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_startdate_datesel" />

    <Button
        android:id="@+id/btn_enddate_datesel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="선택"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/viewenddate_datesel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_startdate_datesel"
        app:layout_constraintTop_toTopOf="@+id/viewenddate_datesel" />

    <Button
        android:id="@+id/btn_comp_chdatesel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:text="완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>