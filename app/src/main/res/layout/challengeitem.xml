<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="10dp"
    android:background="#F1F1F1"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/g_distance_chitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_viewruninfo"
        app:layout_constraintTop_toTopOf="@+id/txt_writer" />

    <TextView
        android:id="@+id/txt_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:text="이름"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_msgcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="km"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/g_distance_chitem"
        app:layout_constraintStart_toEndOf="@+id/g_distance_chitem"
        app:layout_constraintTop_toTopOf="@+id/g_distance_chitem" />

    <ImageView
        android:id="@+id/btn_viewruninfo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    <TextView
        android:id="@+id/time_daychitem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_msgcontent"
        app:layout_constraintStart_toStartOf="@+id/txt_writer"
        app:layout_constraintTop_toBottomOf="@+id/txt_writer" />

</androidx.constraintlayout.widget.ConstraintLayout>